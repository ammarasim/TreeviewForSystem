<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        style="@style/cardview"
        android:layout_marginTop="10dp"
        android:background="@color/general_layout_background_white"
        android:layout_gravity="center_horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"

            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum=".3"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight=".1"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"

                    android:layout_marginRight="5dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_profile_main"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/ic_launcher"

                        >
                    </ImageView>



                </LinearLayout>


                <View
                    android:layout_width="1.5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/btn_blue_dark"></View>
                <ScrollView
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_profile_name"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="profile name "
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_profile_ad"
                            android:layout_below="@+id/tv_profile_address"
                            android:layout_width="wrap_content"
                            android:text="address \n city\n  "
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </ScrollView>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>